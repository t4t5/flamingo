  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/t4t5/flamingo"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:watch": "__DEV__=true vite build --watch",
